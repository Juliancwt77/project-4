<div class="container">

  <div class="heading heading-contact">
    <div class="col-lg-12">
      <div class="section-heading">
        <h2>New Job Offer Information</h2>
      </div>
    </div>
  </div>

  <div class="heading col-lg-12">
    <h4>Username: <%= @posting.candidate.individual.username %> </h4>
    <h4>Skills: <%= @posting.candidate.language %> </h4>
    <h4>Rate ($/hr): <%= @posting.candidate.rate %> </h4>
  </div>

  <div class="row">
    <div class="col-md-9 personal-info">
        <!-- form for -->
                <%= form_for @new_recruit do |f| %>

                <% if @new_recruit.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@new_recruit.errors.count, "error") %>
                        prohibited this profile from being saved:</h2>

                    <ul>
                        <% @new_recruit.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>

                <form class="form-horizontal" role="form">

                <!-- Text input-->
                <div class="form-group">
                    <%= f.label :'Job Scope', class:"col-lg-3 control-label" %>
                    <div class="col-md-8">
                        <%= f.text_field :scope, autofocus: true, class: "form-control", placeholder:"Brief Description of job scope" %>
                        <br/>
                    </div>
                </div>
                <br>
                <br>

                <div class="form-group">

                  <%= f.label :'Start Date', class:"col-lg-3 control-label" %>
                  <div class="col-md-8">

                  <%= f.date_field :start_date, class: "form-control" %>
                  <!-- <%= f.time_select :start_date, :ignore_date => true, class: "form-control" %> -->
                  </div>
                </div>
                <br>
                <br>

                <div class="form-group">

                  <%= f.label :'End Date', class:"col-lg-3 control-label" %>
                  <div class="col-md-8">

                  <%= f.date_field :end_date, class: "form-control" %>
                  <!-- <%= f.time_select :end_date, :ignore_date => true, class: "form-control" %> -->
                  </div>
                </div>
                <br>
                <br>


                <p>
                    <%= f.hidden_field :posting_id, value: @posting.id %>
                </p>

                <p>
                    <%= f.hidden_field :company_id, value: current_user.id %>
                </p>


                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <div class="pull-left">

                            <%= f.submit "Submit", Class: "btn btn-primary" %>

                            <%= link_to "Cancel", :back, class: "btn btn-default" %>

                        </div>
                    </div>
                </div>

              </form>

              <% end %>

    </div>

</div>
    <!-- /.col-lg-12 -->
</div>
<br>
<br>
