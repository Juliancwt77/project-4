<div class="container">
  <div class="row">

    <div class="heading heading-contact">
      <div class="col-lg-12">
        <div class="section-heading">
          <h2>Jobs Offered</h2>
        </div>
      </div>
    </div>

    <div class="col-md-12">

      <% if @offers_sent.present? %>

      <table class="table table-list-search">
        <thead>
          <tr>
            <th>Date Offer Sent</th>
            <th>Username</th>
            <th>Title</th>
            <th>Skills</th>
            <th>Rate</th>
            <th>Job Start Date</th>
            <th>Job End Date</th>
            <th>Job Scope</th>
            <th>Message</th>
            <th>Status/Action</th>
          </tr>
        </thead>

        <tbody>
            <% @offers_sent.reverse_order.each do |offer_sent| %>
                <tr>
                    <td> <%= offer_sent.updated_at %> </td>
                    <td> <%= offer_sent.posting.candidate.individual.username %> </td>
                    <td> <%= offer_sent.posting.candidate.title %> </td>
                    <td> <%= offer_sent.posting.candidate.language %> </td>
                    <td> <%= offer_sent.posting.candidate.rate %> </td>
                    <td> <%= offer_sent.start_date %> </td>
                    <td> <%= offer_sent.end_date %> </td>
                    <td> <%= offer_sent.scope %> </td>
                    <td> Message Here!!! </td>

                    <% if offer_sent.status == 0 %>
                        <td>
                            <span class="btn btn-info btn-block">Job Offered and Pending Acceptance</span>
                        </td>
                    <% elsif offer_sent.status == 1 %>
                        <td>
                            <span class="btn btn-failure btn-block">Job Offer Declined</span>
                        </td>
                    <% elsif offer_sent.status == 2 %>
                        <td>
                            <span class="btn btn-in-progress btn-block">Job Offer Accepted and In Progress</span>
                        </td>
                    <% elsif offer_sent.status == 3 %>
                        <td>
                            <span class="btn btn-success btn-block">Job Completion To Be Confirmed</span>
                        </td>
                    <% elsif offer_sent.status == 4 %>
                        <td>
                            <span class="btn btn-success btn-block">Job Completed</span>
                        </td>
                    <% end %>

                </tr>
            <% end %>
        <tbody>
      </table>

      <% else %>
        <h4>You have not made any job offers. </h4>
      <% end %>

    </div>
  </div>
</div>
