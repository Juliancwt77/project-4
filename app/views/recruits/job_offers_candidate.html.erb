<div class="container">
  <div class="row">

    <div class="heading heading-contact">
      <div class="col-lg-12">
        <div class="section-heading">
          <h2>My Job Offers</h2>
        </div>
      </div>
    </div>

    <div class="heading col-lg-12">
      <h4>Title: <%= @current_candidate_individual_info.title %> </h4>
      <h4>Rate ($/hr): <%= @current_candidate_individual_info.rate %> </h4>
      <h4>Date Listed: <%= @current_candidate_individual_info.updated_at %> </h4>
    </div>

    <div class="col-md-12">
      <table class="table table-list-search">
        <thead>
          <tr>
            <th>Date</th>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Scope</th>
            <th>Message</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @current_candidate_individual_info.posting.recruits.reverse_order.each do |offer_received| %>
              <tr>
                  <td> <%= offer_received.updated_at %> </td>
                  <td> <%= offer_received.company.company_name %> </td>
                  <td> <%= offer_received.company.username %> </td>
                  <td> <%= offer_received.start_date %> </td>
                  <td> <%= offer_received.end_date %> </td>
                  <td> <%= offer_received.scope %> </td>
                  <td> Message here!!! </td>
                  <td> Action here!!! </td>
              <tr>
          <% end %>
        <tbody>

      </table>
    </div>
  </div>
</div>
