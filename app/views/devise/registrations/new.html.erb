<div class="container">
  <div class="heading heading-contact">
    <div class="col-lg-12">
      <div class="section-heading">
        <h2>Sign Up</h2>

      </div>
    </div>
  </div>

<div class="row"i>
  <div class="col-md-9 personal-info">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <form class="form-horizontal" role="form">

    <div class="form-group">
    <%= f.label :'Are you looking to hire or looking for freelance work?', class: "col-lg-7 control-label"%>
    <div class="col-md-1">
    <%= f.select :user_type, ['','Hirer','Freelancer'], autofocus: true, class: "form-control", required: true %>

  </div>
  </div>
  <br/>
  <br/>

  <div class="form-group">
  <%= f.label :email, class: "col-lg-3 control-label"%>
  <div class="col-md-8">
  <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
  <br />
</div>

<div class="form-group">
<%= f.label :password, class: "col-lg-3 control-label"%>

<div class="col-md-8">
<%= f.password_field :password,class: "form-control",  placeholder: "6 characters minimum", required: true %>
<br/>
</div>
</div>

<div class="form-group">
<%= f.label :password_confirmation, class: "col-lg-3 control-label"%>
<div class="col-md-8">
<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
<br />
</div>
</div>

<div class="form-group">
  <label class="col-md-3 control-label"></label>
  <div class="col-md-8">
    <%= f.submit "Sign up", class: "btn btn-primary" %>

  </div>

<% end %>

</div>


</div>
</form>
</div>
</div>
</div>
<br>
<br>
