
<div class="container">

    <div class="heading heading-contact">
      <div class="col-lg-12">
        <div class="section-heading">
          <h2>Update <%= resource_name.to_s.humanize %> Profile</h2>
        </div>
      </div>
    </div>


<div class="row">

  <div class="col-md-9 personal-info">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>


  <form class="form-horizontal" role="form">

    <div class="form-group">
    <%= f.label :name, class: "col-lg-3 control-label"%>
    <div class="col-md-8">
    <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
    <br />
    </div>
    </div>

    <% if current_user.user_type == "Freelancer" %>

    <div class="form-group">
    <%= f.label :username, class: "col-lg-3 control-label"%>
    <div class="col-md-8">
    <%= f.text_field :username, autofocus: true, class: "form-control", required: true %>
    <br />
    </div>
    </div>

    <% else %>

    <div class="form-group">
    <%= f.label :company_name, class: "col-lg-3 control-label"%>
    <div class="col-md-8">
    <%= f.text_field :company_name, autofocus: true, class: "form-control", required: true %>
    <br />
    </div>
    </div>

    <% end %>

    <div class="form-group">
    <%= f.label :contact_number, class: "col-lg-3 control-label"%>
    <div class="col-md-8">
    <%= f.telephone_field :contact_number, minlength: 8, autofocus: true, class: "form-control", required: true, placeholder: "8 digits expected" %>
    <br />
    </div>
    </div>

    <div class="form-group">
    <%= f.label :email, class: "col-lg-3 control-label"%>
    <div class="col-md-8">
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
    <br />
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <br />
    <% end %>
    </div>


    <div class="form-group">
    <%= f.label :password, class: "col-lg-3 control-label"%>

    <div class="col-md-8">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Leave it blank if you do not wish to change your password" %>
    <% if @minimum_password_length %>
    <br/>
    
    <% end %>
    </div>
    </div>

    <div class="form-group">
    <%= f.label :password_confirmation, class: "col-lg-3 control-label"%>
    <div class="col-md-8">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "6 characters minimum" %>
    <br />
  </div>
  </div>

  <div class="form-group">
  <%= f.label :current_password, class: "col-lg-3 control-label"%>
  <div class="col-md-8">
  <%= f.password_field :current_password, autocomplete: "off" , class: "form-control",placeholder: "Enter your current password to confirm any changes above" %>
  <br />
  </div>
  </div>


  <div class="form-group">
    <label class="col-md-3 control-label"></label>
    <div class="col-md-8">
      <div class="pull-right">

        <%= f.submit "Save Changes", class: "btn btn-success" %>

        <span></span>

        <%= link_to "Cancel", :back, class: "btn btn-default" %>

    </div>


    </div>

<% end %>
</div>

</form>
</div>
</div>

</div>

<br>
<br>
