<div class="container">

  <div class="row">

    <div class="heading heading-contact">
      <div class="col-lg-12">
        <div class="section-heading">
          <h1>All Postings</h1>
        </div>
      </div>
    </div>

    <!-- SEARCH BAR -->
    <div class="col-md-12">
      <form action="#" method="get">
        <div class="input-group">
          <input class="form-control" id="system-search" name="q" placeholder="Search all postings..." required>
          <span class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
          </span>
        </div>
      </form>
    </div>

    <div class="col-md-12">
      <br>
      <table class="table table-list-search">

        <tbody>

          <% @postings.each do |posting| %>

            <tr>
              <td>
                <div class="col-md-12">
                  <div class="card">
                    <div class="container-fliud">
                      <div class="wrapper row">
                        <div class="preview col-md-6">

                          <div class="preview-pic tab-content">

                          <% if posting.photo.present? %>

                              <div class="tab-pane active" id="pic-1">
                                <%= image_tag(posting.photo, width: 300, height:250, class:'object-fit_cover') %>
                              </div>

                          <% else %>

                              <div class="tab-pane active" id="pic-1">
                                <img src="http://larics.rasip.fer.hr/wp-content/uploads/2016/04/default-placeholder.png" alt="" width="300" height="250" class="object-fit_cover"/>
                              </div>

                          <% end %>

                          </div>
                        </div>

                        <div class="details col-md-6">
                          <h2 class="product-title">
                            <% if user_signed_in? %>
                                <%= link_to posting.candidate.username, posting_path(posting) %>
                            <% else %>
                              <%= posting.candidate.username %>
                            <% end %>



                          </h2>
                        </div>

                        <div class="details col-md-6">
                          <h2 class="product-title">
                            <%= posting.title %>
                          </h2>
                        </div>

                        <div class="details col-md-6">
                          <h2 class="product-title">
                            <%= posting.language %>
                          </h2>
                        </div>


                      </div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>

          <% end %>

          <tr>
            <td>
            </td>
          </tr>

        </tbody>

      </table>
    </div>

  </div>
</div>
