
<div class="container">


  <div class="heading heading-contact">
    <div class="col-lg-12">
      <div class="section-heading">
        <h2>Browse our highest-rated developers</h2>
      </div>
    </div>
  </div>

  <!-- SEARCH BAR -->
  <div class="col-md-12">
    <form action="#" method="get">
      <div class="input-group">
        <input class="form-control" id="system-search" name="q" placeholder="Search all postings..." required>
        <span class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
        </span>
      </div>
    </form>
    <br>
    <br>
  </div>

	<div class="row" align="center">

      <% @postings.each do |posting| %>
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
            <div class="boxes">
                <div class="img-upper">

                  <% if posting.photo.present? %>

                      <div class="img-responsive" id="pic-1">
                        <%= image_tag(posting.photo_url, width: 230, height:250, class:'object-fit_cover', alt:'Picture') %>
                      </div>

                  <% else %>

                      <div class="img-responsive" id="pic-1">
                        <img src="http://larics.rasip.fer.hr/wp-content/uploads/2016/04/default-placeholder.png" alt="Picture" width="230" height="250" class="object-fit_cover"/>
                      </div>

                  <% end %>

<!--
                    <img class="img-responsive" src="http://hdwallpapershdpics.com/wp-content/uploads/2016/06/hd-image-3.jpg"> -->
                </div>

                <div class="description">
                    <h2>

                      <% if user_signed_in? %>
                          <%= link_to posting.individual.username, posting_path(posting) %>
                      <% else %>
                        <%= posting.individual.username %>
                      <% end %>
                    </h2>


                      <h4 class="product-title">
                        <%= posting.title %>
                      </h2>


                        <h4 class="product-title">
                          Skills: <%= posting.language %>
                        </h2>



                        <h4 class="product-title">
                        Rate: $<%= posting.rate %>/hr
                        </h2>

                        <br>
                    <% if user_signed_in? %>
                        <%= link_to 'View Details', posting_path(posting), class:"btn btn-primary" %>
                    <% else %>

                    <% end %>

                </div>
            </div>

		</div>
    <% end %>
	</div>


</div>
